<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.*?>

<?import javafx.scene.control.ComboBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="uy.edu.ort.ad2.AplicationController">

  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <ComboBox fx:id="algoritmoSeleccionado" layoutX="15.0" layoutY="33.0" prefWidth="200.0" promptText="choose"/>

  <Button text="Correr" onAction="#correrAlgoritmo">

  </Button>
  <Pane VBox.vgrow="ALWAYS" fx:id="pane">
    <Canvas fx:id="canvas" height="${pane.height}" width="${pane.width}"/>
  </Pane>


  <Label fx:id="welcomeText"/>

</VBox>
